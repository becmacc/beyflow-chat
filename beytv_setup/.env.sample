# BeyTV Complete Configuration
# Copy this file to .env and fill in your actual values

# OMDb API Key (get from http://www.omdbapi.com/apikey.aspx)
OMDB_API_KEY=your_omdb_api_key_here

# Plex Server Configuration
PLEX_URL=http://localhost:32400
PLEX_TOKEN=your_plex_token_here

# Library Settings
LIBRARY_TYPE=both    # Options: both, movie, show
MAX_ITEMS=50         # Maximum number of recent items to process

# Telegram Notifications (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Torrent Indexer Settings
QB_URL=http://localhost:8080
QB_USER=admin
QB_PASS=adminadmin
FEEDS=https://yts.mx/rss,https://eztv.re/ezrss.xml
CATEGORY=auto
LIMIT=30

# Storage Router Settings (Linux/macOS only)
SSD_PATH=/mnt/ssd_media
HDD_PATH=/mnt/hdd_media
CLOUD_PATH=/mnt/cloud_media
UNION_PATH=/media
RCLONE_REMOTE_GDRIVE=gdrive:
RCLONE_REMOTE_S3=s3:

# Optional: For remote Plex servers
# PLEX_URL=http://your-server-ip:32400