entrypoint = "replit-agent.js"
language = "nodejs"
run = "node replit-agent.js"
onBoot = "clear && node replit-agent.js"

modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Build"

[[workflows.workflow]]
name = "Start Build"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node replit-agent.js"

[[workflows.workflow]]
name = "Start Dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5173

[[ports]]
localPort = 5173
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "preview"]
build = ["node", "replit-agent.js"]
